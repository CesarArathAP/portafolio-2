---
import { SITE } from "../config";
---

<footer id="footer">
    <ul class="icons">
        <li>
            <a
                href={SITE.github}
                target="_blank"
                rel="noopener noreferrer"
                class="icon brands fa-github"
            >
                <span class="label">GitHub</span>
            </a>
        </li>
        <li>
            <a
                href={SITE.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="icon brands fa-linkedin"
            >
                <span class="label">LinkedIn</span>
            </a>
        </li>
        <li>
            <a href={`mailto:${SITE.email}`} class="icon solid fa-envelope">
                <span class="label">Email</span>
            </a>
        </li>
    </ul>
    <ul class="copyright">
        <li>&copy; {new Date().getFullYear()} {SITE.author}</li>
        <li>Ingeniero en Desarrollo de Software</li>
    </ul>
</footer>

<style>
    #footer {
        background-color: #2c3e50;
        color: rgba(255, 255, 255, 0.5);
        padding: 6em 0 4em 0;
        text-align: center;
    }

    #footer .icons {
        font-size: 1.25em;
        list-style: none;
        padding: 0;
        margin: 0 0 2em 0;
    }

    #footer .icons li {
        display: inline-block;
        padding: 0 1em 0 0;
    }

    #footer .icons li:last-child {
        padding-right: 0;
    }

    #footer .icons li .icon {
        border: 0;
        color: rgba(255, 255, 255, 0.5);
        transition: color 0.2s ease;
    }

    #footer .icons li .icon:hover {
        color: #fff;
    }

    #footer .icons li .icon:before {
        font-size: 2em;
        line-height: 1.75em;
    }

    #footer .copyright {
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.8em;
        letter-spacing: 0.225em;
        list-style: none;
        padding: 0;
        text-transform: uppercase;
        margin: 0;
    }

    #footer .copyright li {
        border-left: solid 1px rgba(255, 255, 255, 0.3);
        display: inline-block;
        line-height: 1em;
        margin-left: 1em;
        padding-left: 1em;
    }

    #footer .copyright li:first-child {
        border-left: 0;
        margin-left: 0;
        padding-left: 0;
    }

    #footer .copyright li a {
        border: 0;
        color: inherit;
    }

    #footer .copyright li a:hover {
        color: #fff;
    }

    .label {
        border: 0;
        clip: rect(0 0 0 0);
        height: 1px;
        margin: -1px;
        overflow: hidden;
        padding: 0;
        position: absolute;
        width: 1px;
    }

    @media screen and (max-width: 736px) {
        #footer {
            padding: 4em 0 2em 0;
        }

        #footer .copyright li {
            border: 0;
            display: block;
            line-height: 1.65em;
            margin: 0;
            padding: 0.5em 0;
        }
    }
</style>

<!-- Font Awesome Icons -->
<link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
/>
