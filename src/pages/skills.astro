---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE, SKILLS } from "../config";
import "../styles/skills.css";
---

<Layout title="Habilidades - Cesar Angeles">
    <Header />

    <!-- Page Header -->
    <section id="page-header" class="wrapper style1">
        <div class="inner">
            <header class="major">
                <h1>Habilidades Técnicas</h1>
                <p>
                    Tecnologías, herramientas y metodologías<br />
                    que domino para crear soluciones de software.
                </p>
            </header>
        </div>
    </section>

    <!-- Skills Section -->
    <section id="skills" class="wrapper style2">
        <div class="inner">
            <!-- Lenguajes de Programación -->
            <div class="skill-category">
                <div class="category-header">
                    <i class="fas fa-code"></i>
                    <h2>Lenguajes de Programación</h2>
                </div>
                <div class="skills-grid">
                    {
                        SKILLS.languages.map((skill) => (
                            <div class="skill-card">
                                <span class="skill-name">{skill}</span>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- Frameworks y Librerías -->
            <div class="skill-category">
                <div class="category-header">
                    <i class="fas fa-layer-group"></i>
                    <h2>Frameworks y Librerías</h2>
                </div>
                <div class="skills-grid">
                    {
                        SKILLS.frameworks.map((skill) => (
                            <div class="skill-card">
                                <span class="skill-name">{skill}</span>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- Bases de Datos -->
            <div class="skill-category">
                <div class="category-header">
                    <i class="fas fa-database"></i>
                    <h2>Bases de Datos</h2>
                </div>
                <div class="skills-grid">
                    {
                        SKILLS.databases.map((skill) => (
                            <div class="skill-card">
                                <span class="skill-name">{skill}</span>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- Herramientas -->
            <div class="skill-category">
                <div class="category-header">
                    <i class="fas fa-tools"></i>
                    <h2>Herramientas de Desarrollo</h2>
                </div>
                <div class="skills-grid">
                    {
                        SKILLS.tools.map((skill) => (
                            <div class="skill-card">
                                <span class="skill-name">{skill}</span>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- Metodologías -->
            <div class="skill-category">
                <div class="category-header">
                    <i class="fas fa-tasks"></i>
                    <h2>Metodologías</h2>
                </div>
                <div class="skills-grid">
                    {
                        SKILLS.methodologies.map((skill) => (
                            <div class="skill-card">
                                <span class="skill-name">{skill}</span>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </section>

    <!-- Soft Skills -->
    <section id="soft-skills" class="wrapper style3 special">
        <div class="inner">
            <header class="major">
                <h2>Habilidades Blandas</h2>
                <p>
                    Competencias interpersonales que complementan<br />
                    mis habilidades técnicas para un desarrollo profesional integral.
                </p>
            </header>
            <ul class="features">
                <li class="icon solid fa-users">
                    <h3>Trabajo en Equipo</h3>
                    <p>
                        Colaboración efectiva en equipos multidisciplinarios con
                        enfoque en objetivos comunes.
                    </p>
                </li>
                <li class="icon solid fa-comments">
                    <h3>Comunicación Efectiva</h3>
                    <p>
                        Capacidad para expresar ideas técnicas de forma clara y
                        comprensible.
                    </p>
                </li>
                <li class="icon solid fa-brain">
                    <h3>Pensamiento Analítico</h3>
                    <p>
                        Análisis lógico de problemas complejos para encontrar
                        soluciones eficientes.
                    </p>
                </li>
                <li class="icon solid fa-lightbulb">
                    <h3>Creatividad</h3>
                    <p>
                        Generación de ideas innovadoras para resolver desafíos
                        técnicos.
                    </p>
                </li>
                <li class="icon solid fa-book-reader">
                    <h3>Aprendizaje Continuo</h3>
                    <p>
                        Adaptación rápida a nuevas tecnologías y metodologías de
                        desarrollo.
                    </p>
                </li>
                <li class="icon solid fa-puzzle-piece">
                    <h3>Resolución de Problemas</h3>
                    <p>
                        Enfoque sistemático para identificar y solucionar
                        problemas técnicos.
                    </p>
                </li>
            </ul>
        </div>
    </section>

    <!-- CTA -->
    <section id="cta" class="wrapper style4">
        <div class="inner">
            <header>
                <h2>¿Quieres saber más?</h2>
                <p>
                    Conoce más sobre mi experiencia y proyectos<br />
                    o contáctame para discutir oportunidades de colaboración.
                </p>
            </header>
            <ul class="actions stacked">
                <li>
                    <a href="/about" class="button fit primary"
                        >Ver Perfil Completo</a
                    >
                </li>
                <li>
                    <a href="/projects" class="button fit">Ver Proyectos</a>
                </li>
            </ul>
        </div>
    </section>

    <Footer />
</Layout>
